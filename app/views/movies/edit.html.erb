<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>編集</h2>
      <%= form_for @movie do |f| %>
        <div class="form-group">
          <label>映画名</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>感想</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <%= f.submit class: "btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>
