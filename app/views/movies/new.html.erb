<% if @movie.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@movie.errors.count, "error") %></h4>
    <p><%= pluralize(@movie.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>新規投稿</h2>
      <%= form_for @movie do |f| %>
        <div class="form-group">
          <label>映画名</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <label>感想</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        
        <%= f.submit class: "btn btn-success" %>
        
      <% end %>
    </div>
  </div>
</div>
