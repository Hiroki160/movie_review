<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">映画名</th>
            <th scope="col">投稿者</th>
            <th scope="col">　</th>
          </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
          <tr>
            <td><%= link_to movie.title, movie_path(movie) %> </td>
            <td><%= movie.user.name %></td>
            <td>
              <% if current_user.already_favorited?(movie) %>
                <%= link_to  "いいねを外す", movie_favorites_path(movie), method: :delete %>
              <% else %>
                <%= link_to "いいね", movie_favorites_path(movie), method: :post %>
              <% end %>
              <%= movie.favorites.count %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
